<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_open_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开系统文件选择器"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_share_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享单个文件"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_open_document" />

    <Button
        android:id="@+id/btn_share_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享多个文件"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_share_single" />

</androidx.constraintlayout.widget.ConstraintLayout>